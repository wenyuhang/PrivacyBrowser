<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.privacy.browser.ui.vm.BrowserVMImpl" />
        <variable
            name="state"
            type="com.privacy.browser.ui.BrowserActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FF_F5F5F5"
        tools:context=".ui.BrowserActivity">

        <View
            android:id="@+id/bg_top_web_bar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/edit_web_url"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintLeft_toLeftOf="@id/bg_top_web_bar"
            app:layout_constraintRight_toRightOf="@id/bg_top_web_bar"
            app:layout_constraintTop_toTopOf="@id/bg_top_web_bar"
            app:layout_constraintBottom_toBottomOf="@id/bg_top_web_bar"
            android:background="@drawable/bg_f5f5f5_solid_radiu_14dp"
            android:text="@={vm.editPageWebTitle}"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="100dp"
            android:hint="请输入地址"
            android:textSize="@dimen/text_size_14sp"
            />

        <ImageView
            android:id="@+id/btn_page_refresh"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@mipmap/ic_page_refresh"
            app:layout_constraintRight_toRightOf="@id/edit_web_url"
            app:layout_constraintTop_toTopOf="@id/edit_web_url"
            app:layout_constraintBottom_toBottomOf="@id/edit_web_url"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:onClick="@{()->state.toRefreshPage()}"
            />
        <Button
            android:id="@+id/btn_page_test"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@mipmap/ic_page_refresh"
            app:layout_constraintTop_toTopOf="@id/edit_web_url"
            app:layout_constraintBottom_toBottomOf="@id/edit_web_url"
            app:layout_constraintRight_toLeftOf="@id/btn_page_refresh"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:text="访问"
            android:onClick="@{()->state.toTest()}"
            />

        <FrameLayout
            android:id="@+id/fl_web_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_top_web_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>